
<view class="wrap g-vip-page">
    <image
        class="bg"
        mode="widthFix"
        src="{{src$.bg}}"
    ></image>
    <view class="user">
        <image src="{{user$.avatarUrl}}"></image>
        <view class="user-name">
            <text>{{user$.Name || user$.nickName}}</text>
        </view>
    </view>
    <view class="statistics">
        <view class="statistics-item">
            <text class="label">本周已完成</text>
            <text class="value">{{objData.PlanCount}}天</text>
            <text class="unit"></text>
        </view>
        <view class="statistics-item statistics-inner">
            <text class="label">您的本次血糖值</text>
            <text class="value">{{params$.Bloodsugar}}</text>
            <text class="unit">mmol/L</text>
            <view class="progress">
                <canvas class="progress-inner" canvas-id="canvasProgressBg"></canvas>
                <canvas class="progress-inner" canvas-id="canvasProgress"></canvas>
            </view>
        </view>
        <view class="statistics-item">
            <text class="label">周计划测糖</text>
            <text class="value">{{objData.TestSugarCount}}天</text>
            <text class="unit"></text>
        </view>
    </view>
    <view class="button"
          data-url="lottery_index"
          bindtap="handleJump">
        <image src="{{src$.icon}}"></image>
        <text>领取打卡奖励</text>
    </view>
    <view class="prompt">
        <text>坚持是一种习惯</text>
        <text>完成进度即可领取福利</text>
    </view>
    <view class="null"></view>
    <view class="operate">
        <view class="operate-bg"></view>
        <image src="{{src$.operate}}"></image>
        <view class="operate-inner">
            <view
                class="operate-item"
                data-url="lottery_roster_index"
                bindtap="handleJump"
            ></view>
            <view
                class="operate-item"
                data-url="report_monthly_index"
                bindtap="handleJump"
            ></view>
        </view>
    </view>
</view>
